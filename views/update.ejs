<strong>Update Item</strong>
<form action="/manage/<%=code%>/edit" method="post">
    <label for="item_name">Item name: </label>
    <input id="item_name" type="text" name="name" value="<%=curritem.name%>" required>
    <br>
    <label for="item_code">Item Code: </label>
    <input id="item_code" type="text" name="code" value="<%=curritem.code%>" required disabled>
    <br>
    <label for="quantity"> Quantity: </label>
    <input type="number" id="quantity" name="quantity" min="0" value="<%=curritem.quantity%>" required>
    <br>
    <label for="price"> Price: </label>
    <input type="number" id="quantity" name="price" min="0" value="<%=curritem.price%>" required>
    <br>
    <input type="submit" value="Update <%=curritem.name%>">
</form>
<br>
<strong>Delete Item</strong>
<form action="/manage/<%=code%>/delete" method="post">
    <label for="delcomment"> Delete Comment: </label>
    <input type="text" id="delcomment" name="comment">
    <br>
    <input type="submit" value="Delete <%=curritem.name%>">
</form>